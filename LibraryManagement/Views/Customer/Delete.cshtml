@model LibraryManagement.Models.Customer

<h2>Delete Customer</h2>

<div>
    <h4>Are you sure you want to delete this customer?</h4>
    <div>
        <strong>Customer Name:</strong> @Model.Name
    </div>

    <form asp-controller="Customer" asp-action="Delete" method="post">
        <!-- Hidden CustomerId to pass to the Delete action -->
        <input type="hidden" asp-for="CustomerId" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>