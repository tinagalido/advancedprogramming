@model LibraryManagement.Models.Author

<h2>Delete Author</h2>

<div>
    <h4>Are you sure you want to delete this author?</h4>
    <div>
        <strong>Author Name:</strong> @Model.Name
    </div>

    <form asp-controller="Author" asp-action="Delete" method="post">
        <!-- Hidden AuthorId to pass to the Delete action -->
        <input type="hidden" asp-for="AuthorId" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>