@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav flex-grow-1">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="btn btn-info" asp-area="" asp-controller="Book" asp-action="Index">Book</a>

        </li>
        <li><span>&nbsp;&nbsp;</span></li>
        <li class="nav-item">
            <a class="btn btn-info" asp-area="" asp-controller="Author" asp-action="Index">Author</a>

        </li>
        <li><span>&nbsp;&nbsp;</span></li>
        <li class="nav-item">
            <a class="btn btn-info" asp-area="" asp-controller="Customer" asp-action="Index">Customer</a>

        </li>
        <li><span>&nbsp;&nbsp;</span></li>
        <li class="nav-item">
            <a class="btn btn-info" asp-area="" asp-controller="LibraryBranch" asp-action="Index">Branch</a>

        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-info" asp-area="" asp-controller="Home" asp-action="Index">Home </a>
        </li>
    }
</ul>
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <a class="btn btn-light fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello
                @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-secondary">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-success" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li><span>&nbsp;</span></li>
        <li class="nav-item">
            <a class="btn btn-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
